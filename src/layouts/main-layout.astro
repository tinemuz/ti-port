---
import { ViewTransitions } from "astro:transitions";
import "../../src/styles/global.css";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
const { title } = Astro.props;
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta
    name="Tinetariro Muzunzandare"
    content="Tinetariro Muzunzandare | Portfolio"
  />
  <title>{title}</title>
  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="icon" href="/favicon.svg" />
  <ViewTransitions />
</head>
<body
  class="bg-skin-bg px-6 text-xs transition-all duration-200 ease-in-out selection:bg-skin-bg-sub3/80 selection:text-skin-text/60 sm:text-sm"
>
<main>
  <Nav />
  <div class="min-h-[calc(100vh-700px)] sm:min-h-[calc(100vh-700px)]">
    <slot />
  </div>
  <Footer />
</main>
</body>
</html>


