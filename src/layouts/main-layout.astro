---
// src/layouts/MainLayout.astro
import "@fontsource/dm-mono";
import { ViewTransitions } from "astro:transitions";
import "../../src/styles/global.css";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="Tinetariro Muzunzandare"
      content="Portfolio, software developer"
    />
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <ViewTransitions />
    <script>
      (function () {
        const themes = ["theme-base", "theme-dark"];
        const savedTheme = localStorage.getItem("theme") || themes[0];
        document.documentElement.classList.add(savedTheme);
      })();
    </script>
  </head>
  <body
    class="bg-skin-bg px-6 text-xs selection:bg-skin-bg-sub selection:bg-opacity-50 selection:text-skin-accent-sub md:text-sm"
  >
    <main>
      <Nav />
      <div
        class="min-h-[calc(100vh-559px)] md:min-h-[calc(100vh-459px)]"
      >
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>
