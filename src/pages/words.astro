---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import WordsGrid from "../components/wordsGrid.astro";
import MainLayout from "../layouts/main-layout.astro";

const allwords: CollectionEntry<"words">[] = (
  await getCollection("words")
).sort(
  (a: CollectionEntry<"words">, b: CollectionEntry<"words">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<MainLayout title="Tine Muzunza | Articles and Project Content">
  <div class="flex flex-col text-skin-text">
    <div class="flex flex-grow flex-col items-center justify-center">
      <div class="w-full pb-16 pt-6 sm:max-w-[812px]">
        <h1 class="pb-4">here are some words</h1>
        <p class="text-justify">
          I write about projects I have worked on and anything I find
          interesting and meaningfull.
        </p>
      </div>
      <div class="w-full flex-grow sm:max-w-[812px]">
        {allwords.map((words) =>
          <WordsGrid words={words} />)}
      </div>
    </div>
  </div>
</MainLayout>
